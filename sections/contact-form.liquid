<div class="max-w-4xl mx-auto px-6 text-center">
  <h2 class="text-4xl font-bold text-white mb-4">
    {% if section.settings.headline != blank %}
      {{ section.settings.headline }}
    {% else %}
      {{ 'contact.stay_updated' | t }}
    {% endif %}
  </h2>
  <p class="text-gray-300 text-lg mb-8">
    {% if section.settings.subtext != blank %}
      {{ section.settings.subtext }}
    {% else %}
      {{ 'contact.subscribe_to_newsletter' | t }}
    {% endif %}
  </p>
  <div class="flex max-w-md mx-auto">
    <input
      type="email"
      placeholder="Enter your email"
      class="flex-1 px-6 py-4 rounded-l-lg rounded-r-none focus:outline-none bg-white"
    >
    <button class="bg-accent text-white px-8 py-4 font-semibold rounded-r-lg hover:bg-amber-600 transition">
      {% if section.settings.button_label != blank %}
        {{ section.settings.button_label }}
      {% else %}
        {{ 'contact.subscribe' | t }}
      {% endif %}
    </button>
  </div>
</div>

{% schema %}
{
  "name": "t:general.contact_form",
  "tag": "section",
  "class": "content-section bg-foreground",
  "settings": [
    {
      "type": "text",
      "id": "headline",
      "label": "t:labels.headline",
      "default": "Stay Updated"
    },
    {
      "type": "text",
      "id": "subtext",
      "label": "t:labels.text_options.subtext",
      "default": "Subscribe to our newsletter for exclusive offers and style tips"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "t:labels.button_label.primary",
      "default": "Subscribe"
    }
  ],
  "presets": [{ "name": "t:general.contact_form" }]
}
{% endschema %}
