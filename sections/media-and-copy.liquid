<div class="w-full mx-auto">
  <div class="flex flex-col md:flex-row items-center justify-between gap-6">
    <div class="flex-1">
      <h2 class="text-5xl font-bold text-white mb-4">
        {% if section.settings.title != blank %}
          {{ section.settings.title }}
        {% else %}
          {{ 'general_content.title' | t }}
        {% endif %}
      </h2>

      <p class="text-white text-xl mb-6">
        {% if section.settings.text != blank %}
          {{ section.settings.text }}
        {% else %}
          {{ 'general_content.subtext' | t }}
        {% endif %}
      </p>

      {% if section.settings.cta_link != blank %}
        <a
          href="{{ section.settings.cta_link }}"
          class="bg-white text-foreground px-8 py-4 font-semibold rounded-lg hover:bg-foreground hover:text-white transition duration-300 block w-fit"
        >
          {% if section.settings.cta_label != blank %}
            {{ section.settings.cta_label }}
          {% else %}
            {{ 'cta.label' | t }}
          {% endif %}
        </a>
      {% endif %}
    </div>
    <div class="flex-1 flex justify-end">
      <div class="relative h-auto md:h-75 w-full md:w-125 overflow-hidden rounded-lg">
        {% if section.settings.image != blank %}
          {% render 'image', image: section.settings.image, img_class: 'w-full h-full object-cover' %}
        {% else %}
          {% render 'placeholder' %}
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:general.media_and_copy",
  "tag": "section",
  "class": "content-section bg-accent",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "t:labels.text_options.title"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "t:general.text"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:labels.image.default"
    },
    {
      "type": "text",
      "id": "cta_label",
      "label": "t:labels.cta.label",
      "default": "Shop now"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "t:labels.cta.link"
    }
  ],
  "presets": [{ "name": "t:general.media_and_copy" }]
}
{% endschema %}
