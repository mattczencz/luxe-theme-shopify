<header class="flex items-center justify-start gap-8 h-25">
  <h2 class="text-3xl font-bold text-brand">
    {{ shop.name | link_to: routes.root_url | upcase }}
  </h2>

  <div class="flex gap-4 flex-1">
    {% for link in section.settings.menu.links %}
      {{ link.title | link_to: link.url, class: 'text-sm font-medium text-gray-900 hover:text-accent transition' }}
    {% endfor %}
  </div>

  <div class="flex gap-4 items-center">
    {{ 'icon-search.svg' | inline_asset_content | link_to: routes.search_url, class: 'size-6' }}

    {% if shop.customer_accounts_enabled %}
      {{ 'icon-account.svg' | inline_asset_content | link_to: routes.account_url, class: 'size-6' }}
    {% endif %}

    <a href="{{ routes.cart_url }}">
      {% if cart.item_count > 0 %}
        <sup class="absolute left-full overflow-hidden max-w-(--page-margin)">{{ cart.item_count }}</sup>
      {% endif %}

      <div class="size-6">
        {{ 'icon-cart.svg' | inline_asset_content }}
      </div>
    </a>
  </div>
</header>

{% stylesheet %}
  header a {
    position: relative;
    text-decoration: none;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:general.header",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "t:labels.menu"
    }
  ]
}
{% endschema %}
