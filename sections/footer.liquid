<footer id="footer" class="bg-white border-t border-gray-200 py-16">
  <div class="max-w-7xl mx-auto px-6">
    <div class="grid grid-cols-5 gap-8 mb-12">
      <div>
        <div class="text-2xl font-bold text-foreground mb-4">{{ shop.name }}</div>
        <p class="text-sm text-gray-600 mb-4">{{ shop.description }}</p>
        {% if section.settings.show_share_links %}
          <div class="flex space-x-4">
            <a href="#" class="text-gray-400 hover:text-foreground transition block">
              <i class="text-xl">
                {{ 'icon-facebook.svg' | inline_asset_content }}
              </i>
            </a>
            <a href="#" class="text-gray-400 hover:text-foreground transition block">
              <i class="text-xl">
                {{ 'icon-instagram.svg' | inline_asset_content }}
              </i>
            </a>
            <a href="#" class="text-gray-400 hover:text-foreground transition block">
              <i class="text-xl">
                {{ 'icon-twitter-x.svg' | inline_asset_content }}
              </i>
            </a>
          </div>
        {% endif %}
      </div>

      {% comment %} MENUS {% endcomment %}
      <div>
        <h4 class="font-bold text-foreground mb-4">Shop</h4>
        <ul class="space-y-2 text-sm text-gray-600">
          <li><a href="#" class="hover:text-foreground transition">New Arrivals</a></li>
          <li><a href="#" class="hover:text-foreground transition">Men</a></li>
          <li><a href="#" class="hover:text-foreground transition">Women</a></li>
          <li><a href="#" class="hover:text-foreground transition">Accessories</a></li>
          <li><a href="#" class="hover:text-foreground transition">Sale</a></li>
        </ul>
      </div>

      <div>
        <h4 class="font-bold text-foreground mb-4">Help</h4>
        <ul class="space-y-2 text-sm text-gray-600">
          <li><a href="#" class="hover:text-foreground transition">Customer Service</a></li>
          <li><a href="#" class="hover:text-foreground transition">My Account</a></li>
          <li><a href="#" class="hover:text-foreground transition">Store Locator</a></li>
          <li><a href="#" class="hover:text-foreground transition">Size Guide</a></li>
          <li><a href="#" class="hover:text-foreground transition">Contact Us</a></li>
        </ul>
      </div>

      <div>
        <h4 class="font-bold text-foreground mb-4">About</h4>
        <ul class="space-y-2 text-sm text-gray-600">
          <li><a href="#" class="hover:text-foreground transition">Our Story</a></li>
          <li><a href="#" class="hover:text-foreground transition">Sustainability</a></li>
          <li><a href="#" class="hover:text-foreground transition">Careers</a></li>
          <li><a href="#" class="hover:text-foreground transition">Press</a></li>
          <li><a href="#" class="hover:text-foreground transition">Affiliates</a></li>
        </ul>
      </div>

      <div>
        <h4 class="font-bold text-foreground mb-4">Legal</h4>
        <ul class="space-y-2 text-sm text-gray-600">
          <li><a href="#" class="hover:text-foreground transition">Terms of Service</a></li>
          <li><a href="#" class="hover:text-foreground transition">Privacy Policy</a></li>
          <li><a href="#" class="hover:text-foreground transition">Cookie Policy</a></li>
          <li><a href="#" class="hover:text-foreground transition">Shipping Policy</a></li>
          <li><a href="#" class="hover:text-foreground transition">Return Policy</a></li>
        </ul>
      </div>
    </div>
    <div class="border-t border-gray-200 pt-8 flex items-center justify-between">
      <p class="text-sm text-gray-600">Â© 2024 LUXE. All rights reserved.</p>
      <div class="flex items-center space-x-4">
        {% if section.settings.show_payment_icons %}
          {% for type in shop.enabled_payment_types %}
            <i class="text-3xl text-gray-400">
              {{ type | payment_type_svg_tag }}
            </i>
          {% endfor %}
        {% endif %}
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "t:general.footer",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "t:labels.menu"
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "t:labels.show_payment_icons",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_share_links",
      "label": "t:labels.show_share_links",
      "default": true
    }
  ]
}
{% endschema %}
