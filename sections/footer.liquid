<div class="w-full mx-auto">
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-8 mb-12">
    <div class="col-span-full lg:col-auto">
      <div class="text-2xl font-bold text-foreground mb-4">{{ shop.name }}</div>
      <p class="text-sm text-gray-600 mb-4">{{ shop.description }}</p>
      {% if section.settings.show_share_links %}
        <div class="flex space-x-4">
          <a href="#" class="text-gray-400 hover:text-foreground transition block">
            <i class="text-xl">
              {{ 'icon-facebook.svg' | inline_asset_content }}
            </i>
          </a>
          <a href="#" class="text-gray-400 hover:text-foreground transition block">
            <i class="text-xl">
              {{ 'icon-instagram.svg' | inline_asset_content }}
            </i>
          </a>
          <a href="#" class="text-gray-400 hover:text-foreground transition block">
            <i class="text-xl">
              {{ 'icon-twitter-x.svg' | inline_asset_content }}
            </i>
          </a>
        </div>
      {% endif %}
    </div>

    {% comment %} MENUS {% endcomment %}
    {% unless section.settings.menu == blank %}
      {% for menu in linklists[section.settings.menu].links %}
        <div>
          {% if menu.links != blank %}
            <h4 class="font-bold text-foreground mb-4">{{ menu.title }}</h4>
            <ul class="space-y-2 text-sm text-gray-600">
              {% for sublink in menu.links %}
                <li>
                  <a href="{{ sublink.url }}" class="hover:text-foreground transition">{{ sublink.title }}</a>
                </li>
              {% endfor %}
            </ul>
          {% endif %}
        </div>
      {% endfor %}
    {% endunless %}
  </div>

  {% comment %} Copyright's {% endcomment %}
  <div class="border-t border-gray-200 pt-8 flex flex-col sm:flex-row sm:items-center justify-between gap-4">
    <p class="text-sm text-gray-600">
      &copy; {{ 'now' | date: '%Y' }}
      {{ shop.name }}.
      {% if section.settings.text != blank %}
        {{ section.settings.text }}
      {% else %}
        {{ 'footer.all_rights_reserved' | t }}
      {% endif %}
    </p>
    <div class="flex items-center space-x-4">
      {% if section.settings.show_payment_icons %}
        {% for type in shop.enabled_payment_types %}
          <i class="text-3xl text-gray-400">
            {{ type | payment_type_svg_tag }}
          </i>
        {% endfor %}
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:general.footer",
  "tag": "footer",
  "class": "bg-white border-t border-gray-200 py-16",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "t:labels.menu"
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "t:labels.show_payment_icons",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_share_links",
      "label": "t:labels.show_share_links",
      "default": true
    },
    {
      "type": "text",
      "id": "text",
      "label": "t:labels.text",
      "default": "All rights reserved."
    }
  ]
}
{% endschema %}
