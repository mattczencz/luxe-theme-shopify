<div class="mx-auto w-full">
  <div class="text-center mb-12">
    <h2 class="text-4xl font-bold text-brand mb-2">
      {% if section.settings.headline != blank %}
        {{ section.settings.headline }}
      {% else %}
        {{ 'general_content.headline' | t }}
      {% endif %}
    </h2>
    <p class="text-gray-600">
      {% if section.settings.subtext != blank %}
        {{ section.settings.subtext }}
      {% else %}
        {{ 'general_content.subtext' }}
      {% endif %}
    </p>
  </div>
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
    {% content_for 'blocks' %}
  </div>
</div>

{% schema %}
{
  "name": "t:general.trending",
  "tag": "section",
  "class": "content-section bg-white",
  "settings": [
    {
      "type": "text",
      "id": "headline",
      "label": "t:labels.headline",
      "default": "Trending Now"
    },
    {
      "type": "text",
      "id": "subtext",
      "label": "t:labels.text_options.subtext",
      "default": "Most popular items this week"
    }
  ],
  "blocks": [{ "type": "product-card" }],
  "max_blocks": 4,
  "presets": [{ "name": "t:general.trending" }]
}
{% endschema %}
